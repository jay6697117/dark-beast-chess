{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable-kv server/main.ts",
    "dev": "deno run --watch --allow-net --allow-read --allow-write --allow-env --unstable-kv server/main.ts",
    "build": "npm install && npm run build",
    "serve": "deno run -A main.ts",
    "clear:kv": "deno run --allow-net --allow-read --unstable-kv scripts/clear_kv.ts"
  },
  "imports": {
    "hono": "https://deno.land/x/hono/mod.ts",
    "hono/": "https://deno.land/x/hono/",
    "std/": "https://deno.land/std@0.208.0/"
  },
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns", "dom"]
  },
  "deploy": {
    "entrypoint": "main.ts"
  }
}
